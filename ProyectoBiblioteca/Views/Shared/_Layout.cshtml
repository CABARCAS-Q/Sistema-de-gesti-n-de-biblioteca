<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Blank</title>
    @Styles.Render("~/Content/css")
<style>
    :root {
        --primary-color: #4e73df;
        --primary-dark: #2e59d9;
        --secondary-color: #1cc88a;
        --accent-color: #f8f9fc;
        --text-color: #5a5c69;
        --light-gray: #f8f9fc;
        --dark-gray: #d1d3e2;
        --error-color: #e74a3b;
        --warning-color: #f6c23e;
    }

    body {
        font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background-color: #f8f9fc;
        color: var(--text-color);
    }

    /* Sidebar Estilizado */
    .sidebar {
        background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-dark) 100%) !important;
        box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
    }

    .sidebar-brand {
        height: 4.375rem;
        background: rgba(255, 255, 255, 0.1);
    }

    .sidebar-brand-icon {
        font-size: 1.5rem;
        transform: rotate(-15deg);
        transition: transform 0.3s;
    }

    .sidebar-brand:hover .sidebar-brand-icon {
        transform: rotate(0deg);
    }

    .sidebar-brand-text {
        font-weight: 800;
        font-size: 1.2rem;
        letter-spacing: 0.05rem;
    }

    .sidebar .nav-item .nav-link {
        padding: 1rem;
        margin: 0.2rem 1rem;
        border-radius: 0.35rem;
        color: rgba(255, 255, 255, 0.8);
        transition: all 0.3s;
    }

    .sidebar .nav-item .nav-link:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .sidebar .nav-item .nav-link i {
        margin-right: 0.5rem;
    }

    .sidebar .nav-item.active .nav-link {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        font-weight: 700;
    }

    .sidebar-divider {
        border-color: rgba(255, 255, 255, 0.15) !important;
        margin: 1rem 1.5rem !important;
    }

    .sidebar-heading {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.85rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.13rem;
        padding: 0 1.5rem;
    }

    .collapse-inner {
        border-left: 3px solid rgba(255, 255, 255, 0.3);
    }

    .collapse-item {
        color: var(--text-color);
        padding: 0.5rem 2rem !important;
        margin: 0.2rem 0;
        border-radius: 0;
        border-left: 3px solid transparent;
        transition: all 0.2s;
    }

    .collapse-item:hover {
        background-color: var(--light-gray);
        border-left: 3px solid var(--primary-color);
        color: var(--primary-color);
    }

    /* Topbar Estilizado */
    .topbar {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
        background: white;
    }

    .navbar-search .form-control {
        border-color: var(--dark-gray);
    }

    .navbar-search .btn {
        border-color: var(--primary-color);
        background: var(--primary-color);
    }

    .topbar-divider {
        border-left: 1px solid rgba(0, 0, 0, 0.1);
    }

    .nav-item.dropdown.no-arrow .dropdown-toggle::after {
        display: none;
    }

    .dropdown-menu {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.2);
        border-radius: 0.35rem;
    }

    .dropdown-item {
        padding: 0.5rem 1.5rem;
        transition: all 0.2s;
    }

    .dropdown-item:hover {
        background-color: var(--light-gray);
        color: var(--primary-color);
    }

    /* Botones y Controles */
    #sidebarToggle, #sidebarToggleTop {
        color: var(--primary-color);
        transition: all 0.3s;
    }

    #sidebarToggle:hover, #sidebarToggleTop:hover {
        transform: rotate(90deg);
    }

    .scroll-to-top {
        background: var(--primary-color);
        width: 2.5rem;
        height: 2.5rem;
        bottom: 3rem;
        right: 3rem;
        opacity: 0.8;
        transition: all 0.3s;
    }

    .scroll-to-top:hover {
        opacity: 1;
        transform: translateY(-5px);
    }

    /* Footer */
    .sticky-footer {
        box-shadow: 0 -0.15rem 0.5rem 0 rgba(58, 59, 69, 0.1);
    }

    /* Efectos y Animaciones */
    @*@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .dropdown-menu {
        animation: fadeIn 0.3s ease-out;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .sidebar {
            width: 100% !important;
            transform: translateX(-100%);
            position: fixed;
            z-index: 1040;
            height: 100vh;
        }*@

        .sidebar.toggled {
            transform: translateX(0);
        }

        #content-wrapper {
            margin-left: 0 !important;
        }
    }

    /* Personalización de iconos */
    .fa-book-reader {
        color: rgba(255, 255, 255, 0.8);
    }

    .fa-user-shield {
        color: var(--primary-color);
    }

    /* Efecto para el enlace premium */
    .nav-link[target="_blank"] {
        position: relative;
        overflow: hidden;
    }

    .nav-link[target="_blank"]:hover {
        color: #fff !important;
    }

    .nav-link[target="_blank"]::after {
        content: "";
        position: absolute;
        top: -50%;
        left: -60%;
        width: 20px;
        height: 200%;
        background: rgba(255, 255, 255, 0.3);
        transform: rotate(30deg);
        transition: all 0.6s;
    }

    .nav-link[target="_blank"]:hover::after {
        left: 120%;
    }
</style>
</head>
<body>
    @{ 
        ProyectoBiblioteca.Models.Persona objeto = ((ProyectoBiblioteca.Models.Persona)Session["Usuario"]);
    }
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Admin")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-book-reader"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Mi Biblioteca</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Admin")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>PANEL DE CONTROL</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <div class="sidebar-heading">
                Gestion
            </div>
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-list"></i>
                    <span>Prestamos</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("Registrar", "Prestamo")">Regitrar</a>
                        <a class="collapse-item" href="@Url.Action("Consultar", "Prestamo")">Consultar</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Utilities Collapse Menu -->
            @{ if (objeto.oTipoPersona.IdTipoPersona == 1)
                {
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                           aria-expanded="true" aria-controls="collapseUtilities">
                            <i class="fas fa-book"></i>
                            <span>Biblioteca</span>
                        </a>
                        <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                             data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Registrar:</h6>
                                <a class="collapse-item" href="@Url.Action("Libros", "Biblioteca")">Libros</a>
                                <a class="collapse-item" href="@Url.Action("Autores", "Biblioteca")">Autores</a>
                                <a class="collapse-item" href="@Url.Action("Editorial", "Biblioteca")">Editorial</a>
                                <a class="collapse-item" href="@Url.Action("Categoria", "Biblioteca")">Categoria</a>
                            </div>
                        </div>
                    </li>
                }
            }

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true"
                   aria-controls="collapsePages">
                    <i class="fas fa-user-friends"></i>
                    <span>Personas</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages"
                     data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Registrar:</h6>
                        @{if (objeto.oTipoPersona.IdTipoPersona == 1)
                            {
                                <a class="collapse-item" href="@Url.Action("Usuarios","Persona")">Usuarios</a>
                            }
                        }
                        <a class="collapse-item" href="@Url.Action("Lectores","Persona")">Lectores</a>
                    </div>
                </div>
            </li>
           

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <!-- Topbar Search -->
  
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
                                 aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small"
                                               placeholder="Search for..." aria-label="Search"
                                               aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@(objeto.Nombre + " " + objeto.Apellido )</span>
                                <i class="fas fa-user-shield" style="font-size:25px;font-weight:bold"></i>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("CerrarSesion","Admin")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Salir
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
           
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
